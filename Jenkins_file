pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo "Build stage executed at ${env.TIMESTAMP} by ${env.USER} on ${env.NODE_NAME}"
            }
        }
        stage('Test') {
            steps {
                echo "Test stage executed at ${env.TIMESTAMP} by ${env.USER} on ${env.NODE_NAME}"
            }
        }
        stage('Install') {
            steps {
                echo "Install stage executed at ${env.TIMESTAMP} by ${env.USER} on ${env.NODE_NAME}"
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploy stage executed at ${env.TIMESTAMP} by ${env.USER} on ${env.NODE_NAME}"
            }
        }
    }
}
